@model Menu_x_Me_App.Models.ClientFood
@{
    ViewBag.Title = "InsertNewClient";
}

<h2>Insert new client for food: @Model.food.Name</h2>

@using (Html.BeginForm("InsertClientFood", "Foods"))
{ 
    <div class="form-group">
        @Html.DropDownListFor(f => f.ClientId, new SelectList(Model.clients, "Id", "Name"), new {@class = "form-control"})

        @Html.HiddenFor(f => f.FoodId)
    </div>

    <div class="form-group">
        <button type="submit"  class="btn btn-default">Add client to food</button>
    </div>
}

